<div class="content-wrapper" style="min-height: 926px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>        
        <small>preview of simple tables</small>
      </h1 class = "add_product">
      <a href="<%= new_admin_product_path %>">
        <button type="button" class="btn bg-olive btn-flat margin">
          <%=t ".add_product"%>
        </button>
      </a>
      <a href="<%= admin_products_path(type: "deleted") %>">
        <button type="button" class="btn bg-olive btn-flat margin">
          <%=t ".deleted_product"%>
        </button>
      </a>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Products</a></li>
        <li class="active">Index</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Responsive Hover Table</h3>
              
              <div class="box-tools">

                <%= search_form_for @q, url: admin_search_path do |f| %>
                  <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
                    <%= f.search_field :name_cont, class: "form-control pull-right", placeholder: "Search" %>
                    <div class="input-group-btn">
                      <%= button_tag(type: "submit", class: "btn btn-default") do %>
                        <i class="fa fa-search"></i>
                      <%end%>
                    </div> 
                  </div> 
                <%end%>
                

              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody><tr>
                  <th>ID</th>
                  <th>Image</th>
                  <th>Product name</th>
                  <th>Catalogue</th>
                  <th>Price (VND)</th>
                  <th>Update date</th>
                  <th>Create date</th>
                  <%if @type == "deleted"%>
                    <th>Delete at</th>
                  <%end%>
                    <th>Product details</th>
                  <th>Actions</th>
                </tr>

                <% @products.each do |product| %>
                <% product_detail_prices = product.product_details.map{ |product_detail| product_detail.price }.uniq%>

                  <tr>
                    <th><%=product.id%></th>
                    <th class = "index-img"><%=image_tag product.image.first if product.image.attached? %></th>
                    <th><%=product.name%></th>
                    <td><%=product.classify%>,<%=product.product_type%></td>
                    <% if product_detail_prices.length == 1%>
                      <th><%= product_detail_prices.first%></th>
                    <% else %>
                      <th><%=product_detail_prices.min%> - <%=product_detail_prices.max%></th>
                    <%end%>
                    <td><%=product.updated_at%></td>
                    <td><%=product.created_at%></td>
                    <%if @type == "deleted"%>

                      <td>
                        <%= product.deleted_at %>
                      </td>
                      <td>
                        <%= link_to 'View',  admin_product_path(product, type: @type), class: "label label-success"  %>
                      </td>
                      <td>
                        <%= link_to admin_product_path(product.id, type: "restore"), method: :patch do  %>
                          <i class="fas fa-trash-restore"></i>
                        <% end %>
                      </td>

                    <%else%>

                      <td>
                        <%= link_to 'View',  admin_product_path(product), class: "label label-success"  %>
                      </td>
                      <td>
                        <%= link_to edit_admin_product_path(product.id) do  %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_product_path(product.id), method: :delete do  %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </td>

                    <%end%>
                    </tr>
                  <% end %>


              </tbody></table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>